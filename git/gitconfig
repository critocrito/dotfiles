[user]
    name = crito
    email = crito@cryptodrunks.net
    signingkey = 1CFA02A2
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[alias]
    p = pull
    c = commit
    d = diff
    s = status --short --branch
    l = log
    a = add
    m = merge
    b = branch -v
    r = remote -v
    g = grep --break --heading --line-number # in uncommitted state

    aa = add -A
    ap = add --patch
    co = checkout
    cp = cherry-pick
    ds = diff --cached
    it = !git init && git commit -m 'Initial commit.' --allow-empty
    mt = mergetool
    ms = merge --squash
    nb = checkout -b
    pu = push
    sh = show
    st = status

    amend = commit --amend             # amend your last commit
    cherry-pick = cherry-pick -x       # grab a change from a branch

    stsh    = stash --keep-index        # stash only unstaged changes to tracked files
    staash  = stash --include-untracked # stash untracked and tracked files
    staaash = stash --all               # stash ignored, untracked, and tracked files

    last         = diff HEAD^          # diff last committed change
    log          = log --decorate --graph --date=short --graph
    grog         = log --graph --abbrev-commit --decorate --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)'
    stats        = log --stat          # Show log stats
    changes      = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status
    short        = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\"
    changelog    = log --pretty=format:\" * %s\"
    shortnocolor = log --pretty=format:\"%h %cr %cn %s\"
    filelog      = log -u              # show changes to a file
    remote = remote -v                 # Be verbose when printing remotes
    unstage  = reset HEAD              # remove files from index (tracking)
    uncommit = reset --soft HEAD^      # go back before last commit, with files
    patch = !git --no-pager diff --no-color

[format]
    pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[merge]
    summary = true
    verbosity = 1
    tool = ediff
    # tool = vimdiff3
    #tool = fugitive
[apply]
    whitespace = nowarn
[branch]
    autosetupmerge = true
[push]
    # 'git push' will push the current branch to its tracking branch
    # the usual default is to push all branches
    default = tracking
[core]
    pager = diff-so-fancy | less --tabs=4 -RFX
    #editor = e
    #excludesfile = ~/.dotfiles/gitignore_global
[advice]
    statusHints = false
[diff]
    # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
    # instead of a/b/c/d as prefixes for patches
    mnemonicprefix = true
[rerere]
    # Remember my merges
    # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
    enabled = true
[github]
    user = crito
[pull]
    rebase = true
[mergetool "fugitive"]
    cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[mergetool "vimdiff3"]
    cmd = vim -f -d -c 'wincmd J' -c 'resize 22' $MERGED $LOCAL $BASE $REMOTE
[mergetool.ediff]
    cmd = emacs --eval \"\
(progn\
  (defun ediff-write-merge-buffer ()\
    (let ((file ediff-merge-store-file))\
      (set-buffer ediff-buffer-C)\
      (write-region (point-min) (point-max) file)\
      (message \\\"Merge buffer saved in: %s\\\" file)\
      (set-buffer-modified-p nil)\
      (sit-for 1)))\
  (setq ediff-quit-hook 'kill-emacs\
        ediff-quit-merge-hook 'ediff-write-merge-buffer)\
  (ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\"\
                                   \\\"$BASE\\\" nil \\\"$MERGED\\\"))\"
[grep]
	extendRegexp = true
	lineNumber = true
[sendemail]
	smtpuser = crito
	smtpserver = mx20.cryptodrunks.net
	smtpencryption = tls
	smtpserverport = 587
	suppresscc = self
[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '
    show = diff-so-fancy | less --tabs=4 -RFX
