# -*- mode: muttrc -*-

# vim: set filetype=muttrc
# See: http://dev.gentoo.org/~tomka/mail.html

set mbox_type=Maildir
mailboxes ="tacticaltech" ="INBOX.Sent" ="INBOX.Drafts" "=mu-search"
set mask="!^\\.[^.]"
set record = +tacticaltech/INBOX.Sent
set postponed = +tacticaltech/INBOX.Drafts

set from = "christo@tacticaltech.org"

set header_cache=~/.mutt/cache/tacticaltech/headers
set message_cachedir=~/.mutt/cache/tacticaltech/bodies
set certificate_file=~/.mutt/certificates

set use_envelope_from # a boolean value, you can deselect it with set
                      # nouse_envelope_from
set envelope_from_address= "christo@tacticaltech.org"
my_hdr From: "Christo" <christo@tacticaltech.org>

set status_format="TACTICALTECH: %f [New:%n Del:%d Tag:%t]"
set help=no

# Tacticaltech specific bindings
macro index gi  "<change-folder> =tacticaltech/tacticaltech<enter>"  "go to Inbox"
macro index gs  "<change-folder> =tacticaltech/INBOX.Sent<enter>"  "go to Sent Messages"

# 'a' shows all messages again (supersedes default <alias> binding)
macro index a "<limit>all\n" "show all messages (undo limit)"
