music_directory     "~/Music"
playlist_directory  "~/.mpd/playlists"
db_file	            "~/.mpd/mpd.db"
log_file            "~/.mpd/mpd.log"
pid_file            "~/.mpd/mpd.pid"
state_file          "~/.mpd/mpdstate"
connection_timeout  "60"
max_connections     "20"

audio_output {
  type        "httpd"
  name        "My HTTP Stream"
  encoder     "vorbis"
#  bind_to_address "0.0.0.0"
  port        "8080"
  bitrate     "128"
  format      "44100:16:1"
  max_clients "0"
}

audio_output {
  type "pulse"
  name "My Pulse Output"
}
