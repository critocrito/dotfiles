# systemd
alias sc='systemctl'
alias scu='systemctl --user'

# Manage the nexus android device
alias nexus-connect="go-mtpfs /media/nexus"
alias nexus-disconnect="sudo umount /media/nexus"

# cd
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......='../../../../..'

alias -- -='cd -'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'

# ls
if is_mac; then
  alias ls='ls -F -G'
else
  alias ls='ls -F --color=auto'
fi

alias l='ls -lAh'
alias ll='ls -lh'
alias lt='l -t'

# Push and pop directories on directory stack
alias pu='pushd'
alias po='popd'

# Format kernel log timestamps nicely
alias dmesg='dmesg -H'
