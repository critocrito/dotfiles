#!/bin/sh

if [ -z "$XDG_RUNTIME_DIR" ]; then
    printf "XDG_RUNTIME_DIR isn't set\n" >&2
    exit 6
fi

_DISPLAY="$(systemd-escape -- "$DISPLAY")"
trap "rm -f $(printf '%q' "${XDG_RUNTIME_DIR}/xorg-wm@${_DISPLAY}")" EXIT
mkfifo "${XDG_RUNTIME_DIR}/xorg-wm@${_DISPLAY}"

cat < "${XDG_RUNTIME_DIR}/xorg-wm@${_DISPLAY}" &
systemctl --user start "xorg@${_DISPLAY}.target" &
wait
systemctl --user stop "xorg@${_DISPLAY}.target"
